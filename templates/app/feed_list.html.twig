{% extends 'base.html.twig' %}

{% block body %}
    <table id="tag" class="table table-striped table-middle-aligned">
        <thead>
        <tr>
            <th scope="col">Titulo</th>
            <th scope="col" class="text-center"><i class="fa fa-cogs" aria-hidden="true"></i> Acciones</th>
        </tr>
        </thead>
        <tbody>
        {% for feed in feeds %}
            <tr>
                <td>{{ feed.title }}</td>
                <td>
                    <div class="item-actions" align="center">
                        <a href="{{ path('feed_read', { 'id':feed.id }) }}" class="btn btn-sm btn-info" title="Leer">
                            <i class="fas fa-eye"></i>
                        </a>
                        <a href="{{ path('feed_update', { 'id':feed.id }) }}" class="btn btn-sm btn-success" title="Editar">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a href="{{ path('feed_delete', { 'id':feed.id }) }}" class="btn btn-sm btn-danger" title="Borrar">
                            <i class="fas fa-trash-alt"></i>
                        </a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4" align="center">No se ha encontrado ninguna noticia.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}